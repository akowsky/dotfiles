menu-2-0 = ÔÄë
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/battery]
type = internal/battery
full-at=99
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = %H:%M
format-charging = Ôá¶ <ramp-capacity> <label-charging>%
label-charging = %percentage%
format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %time%
label-full = ÔâÄ
ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ

[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 3.0
format-padding = 1
format-connected = <label-connected>
label-connected = %{A1:bash ~/.root/rofi-wifi-menu/rofi-wifi-menu.sh:} Ôá´ %signal%% %{A}

format-disconnected = <label-disconnected>
label-disconnected = %{A1:bash ~/.root/rofi-wifi-menu/rofi-wifi-menu.sh:} Ôá´ %signal%% %{A}
label-disconnected-foreground = #66ffffff


#format-connected = %{A1:$HOME/.config/polybar/scripts/nmcli-rofi:}<ramp-signal>%{A}
#format-disconnected = %{A1:$HOME/.config/polybar/scripts/nmcli-rofi:}icon-or-label%{A}

