[colors]
background = #aa0c0c0c
background-alt = #00444
foreground = #ffffff
foreground-alt = #cccccc
foreground-inactive = #cccccc
primary = #ff0000
secondary = #e60000
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
background = ${colors.background}
foreground = ${colors.foreground}
width = 100%
height = 30
fixed-center = true
tray-scale = 1
wm-restack = bspwm
#override-redirect = true

modules-left =  menu-apps xwindow mpd
modules-center = bspwm
modules-right = xkeyboard wireless-network pulseaudio memory temperature battery eth date powermenu

font-0 = xos4 Terminus:style=Bold
font-1 = Font Awesome 5 Free:style=Regular
font-2 = Font Awesome 5 Free:style=Solid
font-3 = Font Awesome 5 Brands:style=Regular
font-4 = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid
font-5 = Font Awesome 5 Free,Font Awesome 5 Free Regular:style=Regular
font-6 = Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular

tray-position = right
tray-padding = 1
pseudo-transparency = true
tray-background = ${colors.background}

[module/bspwm]
type = internal/bspwm
label-focused = ÔÜí
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

label-occupied = ÔÑë
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1

label-urgent = ÔÑë
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

label-empty = ÔÑë
label-empty-foreground = ${colors.foreground-inactive}
label-empty-padding = 1

enable-click = true


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
format-foreground = ${colors.foreground}
format-padding = 3

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = 
label-indicator-padding = 2
label-indicator-background = ${colors.alert}

[module/filesystem]
type = internal/fs
interval = 25
format-filesystem-background = #651fff
format-foreground = ${colors.foreground}
format-padding = 2
mount-0 = /
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

interval = 2
format-online-foreground = ${colors.foreground}
format-online-background = #9c27b0
format-online-padding = 2

click-left = 'urxvt -e ncmpcpp' &
scroll-up = mpc next &
scroll-down = mpc prev &

[module/cpu]
type = internal/cpu
interval = 2
format-padding = 2
format-foreground = ${colors.foreground}
label = Ôãõ %percentage%%

[module/memory]
type = internal/memory
interval = 1
format-foreground = ${colors.foreground}
format-padding = 1
label = Ôî∏ %percentage_used%%

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0
format-connected-padding = 1
format-connected-underline = #55aa55
#format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = ÔïÇ %linkspeed%

format-disconnected =ÔïÇ
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
label-disconnected-foreground = #ff0000

[module/date]
type = internal/date
interval = 5
date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

#format-prefix = ÔÄó
#format-prefix-foreground = ${colors.foreground-alt}
format-foreground = ${colors.foreground}
format-underline = #0a6cf5
format-padding = 1
label =  %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo
Default: true
use-ui-max = true
interval = 1
format-volume = <ramp-volume> <label-volume>
label-muted = muted
label-muted-foreground = #ff0000
ramp-volume-0 = ÔÄ¶
ramp-volume-1 = ÔÄß
#ramp-volume-2 = üîä
format-volume-padding = 1
format-volume-foreground = ${colors.foreground}


[module/temperature]
